{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "COVID-19 Cases per Country (13 Oct 2020)",
    "data": {
    "url": "https://raw.githubusercontent.com/airf0002/FIT3179_assignment2/main/data/per-capita-plastic-waste-vs-gdp-per-capita.csv"
    },
    "transform": [
        {"filter": "datum.Continent != ''"}
        ],
    "mark": "circle",
    "encoding": {
    "x": {
    "field": "GDP",
    "type": "quantitative",
    "title": "Confirmed Cases",
    "scale": {"domain": [0,55000]}, "axis": {"grid": false, "domainColor":"", "ticks": false}
    },
    "y": {
    "field": "Per capita plastic waste (kg/person/day)",
    "type": "quantitative"
    },
    "color": {
    "field": "Continent",
    "type": "nominal"
    },
    "size": {
    "field": "Total population (Gapminder, HYDE & UN)",
    "type": "quantitative",
    "scale": {"type": "threshold",
 "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
 "range": [10, 50, 150, 200, 300, 400]},
 "legend": {"format": ".1s"}
    }
    }
   }