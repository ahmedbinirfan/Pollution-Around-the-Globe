{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 400,
    "title": "Per capita plastic waste vs GDP per capita",
    "data": {
    "url": "https://raw.githubusercontent.com/airf0002/FIT3179_assignment2/main/data/plastic_data.csv"
    },
    "mark": "circle",
    "encoding": {
    "x": {
    "field": "GDP",
    "type": "quantitative",
    "title": "GDP per capita",
    "scale": {"domain": [0,120000]}, "axis": {"grid": false, "domainColor":"", "ticks": false}
    },
    "y": {
    "field": "Plastic",
    "type": "quantitative",
    "title": "Per capita plastic waste",
    "scale": {"domain": [0, 1]},
    "axis": {"domainColor":""}
    },
    "color": {
    "field": "Continent",
    "type": "nominal"
    },
    "size": {
    "field": "Population",
    "type": "quantitative",
    "scale": {"type": "threshold",
 "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
 "range": [10, 50, 150, 200, 300, 400]},
 "legend": {"format": ".1s"}
    },

    "tooltip": [ 
     {"field": "Entity", "type": "nominal", "title": "Country"},
     {"field": "Continent", "type": "nominal", "title": "Continent"},
     {"field": "Plastic", "type": "quantitative", "title": "Plastic", "format":".2f"},
     {"field": "GDP", "type": "quantitative", "title": "GDP", "format":".2f"},
     {"field": "Population", "type": "quantitative", "title": "Population"}

   ]
    }
   }