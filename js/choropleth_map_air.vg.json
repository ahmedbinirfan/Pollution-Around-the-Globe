{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 850,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/airf0002/FIT3179_assignment2/main/js/custom.geo.json",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "projection": {
    "type": "equirectangular"
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/airf0002/FIT3179_assignment2/main/data/share-deaths-outdoor-pollution.csv"
        },
        "key": "Entity",
        "fields": ["Outdoor air pollution (IHME, 2019)"]
      }
    }
  ],
  
  "mark": {"type": "geoshape", "stroke": "whitesmoke"},
  "encoding": {
    "color": {
      "field": "Outdoor air pollution (IHME, 2019)",
      "type": "quantitative",
      "scale": {
        "type": "threshold", 
        "domain":[ 1,  5,  10,  15],
        "range":["#ffe6e6","#ff9999", "#ff4d4d", "#cc0000", "#800000"]
        },
        "legend": {"orient": "right"},
      "title": "Per Capita CO2 (tons)"
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Outdoor air pollution (IHME, 2019)", "type":"quantitative", "title": "CO2 (tons)"}
    ]
  },
  "config": {
      "background":"",
  "view": {
     "stroke": "transparent"
  }
  }
}