{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 620,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/airf0002/FIT3179_assignment2/main/data/global-fossil-fuel-consumption.csv"
    },
    
    "layer":[ 
      {"mark": {"type": "area"},
  
      "encoding": {
        "color": {
        "field": "Type",
        "scale": {"scheme": "redgrey"},
        "sort": "-color",
        "legend":false}
        ,
        "y": {
          "field": "Consumption",
          "type": "quantitative",
          "title": "Fossil Fuel Consumption (TWh)",
          "aggregate": "sum",
          "axis": {"tickCount":5, "domainColor":""}
          },
        "x": {
          "field": "Year", 
          "type": "temporal",
          "axis": {"grid": false, "domainColor":"", "ticks": false}
          },
        
        "tooltip": [
        {"field": "Type", "type": "nominal", "title": "Entity"},
        {
          "field": "Consumption",
          "type": "quantitative",
          "format": ".2f",
          "title": "Fossil Fuel Consumption (TWh)"
        },
        {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"}
      ]
    }},
  
    {
        "mark": {
          "type": "text",
          "align": "left",
          "dy":-150,
          "dx":355
        },
        "encoding": {
          "text": {"value": "Coal", "type": "nominal"},
          "color": {"value": "black"},
          "opacity":{
            "condition": {"test": "year(datum['Year']) == 2019 && datum.Type=='Coal'", "value": 1},
            "value": 0
          }
        }
  
      },
  
    {
        "mark": {
          "type": "text",
          "align": "left",
          "dy":-30,
          "dx":355
        },
        "encoding": {
          "text": {"value": "Gas", "type": "nominal"},
          "color": {"value": "black"},
          "opacity":{
            "condition": {"test": "year(datum['Year']) == 2019 && datum.Type=='Gas'", "value": 1},
            "value": 0
          }
        }
  
      },

    {
        "mark": {
          "type": "text",
          "align": "left",
          "dy":100,
          "dx":355
        },
        "encoding": {
          "text": {"value": "Oil", "type": "nominal"},
          "color": {"value": "black"},
          "opacity":{
            "condition": {"test": "year(datum['Year']) == 2019 && datum.Type=='Oil'", "value": 1},
            "value": 0
          }
        }
  
      }
    
    ],
     "config": {
        "background":"",
    "view": {
       "stroke": "transparent"
    }
  }
  }
  